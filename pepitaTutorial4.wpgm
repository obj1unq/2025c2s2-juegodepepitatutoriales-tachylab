import pepita.*
import comidasClases.*
import wollok.game.*
import extras.*
import mapa.*

program tutorial4 {
    game.title("Pepita") 	//Valor por defecto "Wollok Game"
	game.height(10) 		//valor por defecto 5
	game.width(10) 			//valor por defecto 5
	game.cellSize(50) 		//valor por defecto 50
	game.boardGround("fondo2.jpg")

	//Mapa
	mapa.construir()

	/*Instancias de clases Definidas
	const manzana1 = new Manzana()
	const manzana2 = new Manzana()
	const manzana3 = new Manzana()
	const alpiste1 = new Alpiste()
	*/
	//Pepita
	pepita.energia(500)
    game.addVisual(pepita)
	
	/*AÃ±adir las instancias
	game.addVisual(manzana1)
	game.addVisual(manzana2)
	game.addVisual(manzana3)
	game.addVisual(alpiste1)
	*/

	//Keyboard methods
	keyboard.right().onPressDo({pepita.mover(derecha)})
	keyboard.left().onPressDo({pepita.mover(izquierda)})
	keyboard.up().onPressDo({pepita.mover(arriba)})
	keyboard.down().onPressDo({pepita.mover(abajo)})

    //Colisiones
    game.onCollideDo(pepita, {otro => otro.chocaConPepita()}) //Comportamiento de los objetos visuales al colisionar con pepita

	//Eventos periodicos
	comidas.comenzar() //Empiezan a aparecer comidas en el tablero

	game.start()
}